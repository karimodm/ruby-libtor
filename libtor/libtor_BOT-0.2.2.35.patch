+	sed -r "s/BOT_SOCKSPORT [0-9]+/BOT_SOCKSPORT $PUERTO_TOR/" src/or/config.c > src/or/config_new.c
+	mv src/or/config_new.c src/or/config.c
+fi
+make distclean
+export CFLAGS="-s -Wno-unused-value"
+./configure
+make -j 2
+rm libtor.a
+ar crv libtor.a $(find -type f -name *.o)
